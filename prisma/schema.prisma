generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("FAVOMS_DB_URL")
}

model Mylist {
  id         Int          @id @default(autoincrement())
  name       String
  items      Item[]
  mylistItem MylistItem[]
}

model Item {
  id         Int          @id @default(autoincrement())
  name       String
  mylists    Mylist[]
  mylistItem MylistItem[]
}

model MylistItem {
  mylist   Mylist @relation(fields: [mylistId], references: [id])
  mylistId Int
  item     Item   @relation(fields: [itemId], references: [id])
  itemId   Int

  @@id([mylistId, itemId])
}
